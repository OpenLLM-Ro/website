# EditorConfig provides a way to ensure consistent formatting across editors/IDEs.
# More information available at https://editorconfig.org

# This is the top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2
